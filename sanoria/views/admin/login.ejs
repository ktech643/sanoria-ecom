<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin â€” Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/assets/css/styles.css" rel="stylesheet">
</head>
<body class="bg-dark text-light">
  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <form class="bg-secondary bg-opacity-25 p-4 rounded" id="loginForm">
      <h1 class="h4 mb-3">Admin Login</h1>
      <div class="mb-3">
        <label>Email</label>
        <input name="email" class="form-control" value="abcd@gmail.com"/>
      </div>
      <div class="mb-3">
        <label>Password</label>
        <input name="password" type="password" class="form-control" value="11223344"/>
      </div>
      <button class="btn btn-warning w-100">Login</button>
      <div id="loginMsg" class="mt-3 small"></div>
    </form>
  </div>
  <script>
  document.getElementById('loginForm').addEventListener('submit', async (e) => {
    e.preventDefault();
    const fd = new FormData(e.target);
    const body = Object.fromEntries(fd.entries());
    const res = await fetch('/api/auth/login', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify(body) });
    const json = await res.json();
    document.getElementById('loginMsg').textContent = json.ok ? 'Logged in' : (json.error || 'Error');
  });
  </script>
</body>
</html>