# Environment Configuration for Sanoria.pk

# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=sanoria_db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
SESSION_SECRET=your-session-secret-key-change-this

# Email Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Payment Gateway - JazzCash
JAZZCASH_MERCHANT_ID=MC12345
JAZZCASH_PASSWORD=your-jazzcash-password
JAZZCASH_INTEGRITY_SALT=your-jazzcash-salt
JAZZCASH_RETURN_URL=http://localhost:5000/api/payments/jazzcash/callback
JAZZCASH_API_URL=https://sandbox.jazzcash.com.pk/ApplicationAPI/API/Payment/DoTransaction

# Payment Gateway - EasyPaisa
EASYPAISA_STORE_ID=your-store-id
EASYPAISA_ACCOUNT=03001234567
EASYPAISA_HASH_KEY=your-easypaisa-hash-key
EASYPAISA_RETURN_URL=http://localhost:5000/api/payments/easypaisa/callback
EASYPAISA_API_URL=https://easypay.easypaisa.com.pk/easypay/Index.jsf

# Shipping Partners API Keys (if available)
LEOPARD_API_KEY=your-leopard-api-key
LEOPARD_API_URL=https://api.leopards.com.pk
TCS_API_KEY=your-tcs-api-key
TCS_API_URL=https://api.tcs.com.pk
PKDEX_API_KEY=your-pkdex-api-key
PKDEX_API_URL=https://api.pkdex.com

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./public/uploads

# Google Analytics (optional)
GA_TRACKING_ID=UA-XXXXXXXXX-X

# Facebook Pixel (optional)
FB_PIXEL_ID=XXXXXXXXXXXXXXXX